@model DBProgramming_II.Models.AllDataLists
@{
    ViewBag.Title = "Home Page";
}

<link rel="stylesheet" href="~/Content/main.css" />
<script type="text/javascript" src="~/Content/main.js"></script>


<div class="row">
    <div class="col-md-12">
        <h2>List of Books (@ViewBag.mySubTitle)</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h4><a href="/Home/AddProduct/"><b>Add a product</b></a></h4>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <table id="products" class="table">
            <thead>
                <tr>
                    <th>Product Code</th>
                    @*<th>Description</th>
                        <th>Price</th>
                        <th># of Invoices</th>*@
                    <th>Display</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <th onclick="getProductDetails('@product.ProductCode');" scope="row" class="success">@product.ProductCode</th>
                        @*<td class="danger">@product.Description</td>
                            <td class="info">@product.UnitPrice</td>
                            <td class="success">@product.InvoiceLineItems.Count()</td>*@
                        <td class="warning">
                            @if (product.InvoiceLineItems.Count() == 0)
                            {
                                <span>No Invoices</span>
                            }
                            else
                            {
                                <a href="/Invoices/Index/@product.ProductCode">Display All Invoices</a>
                            }
                        </td>
                        <td class="info"><a href="/Home/AddProduct/@product.ProductCode">Edit</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel"><b>Product Details</b></h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>